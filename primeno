#include<stdio.h>
#include<math.h>

int Prime(int i,int num)

{

if(num==i)
return 0;
else

if(num%i==0)

return 1;
else
{

return Prime(i+1,num);

}

}

int main()

{

int num;

printf("Enter a Number:");

scanf("%d",&num);

if(Prime(2,num)==0)

printf("%d is a Prime Number.",num);

else

printf("%d is not a Prime Number.",num);

}
